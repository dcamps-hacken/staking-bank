{
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-solhint": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.7.2",
    "chai": "^4.3.6",
    "dotenv": "^16.0.1",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.9",
    "hardhat": "^2.10.2",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-deploy": "^0.11.12",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "solidity-coverage": "^0.7.21"
  },
  "scripts": {
    "deploy": "yarn hardhat deploy",
    "deploy-localhost": "yarn hardhat deploy --network localhost",
    "deploy-rinkeby": "yarn hardhat deploy --network rinkeby",
    "verify": "yarn hardhat run scripts/verify-contracts.js --network rinkeby",
    "test": "yarn hardhat test",
    "test-localhost": "yarn hardhat test --network localhost",
    "test-rinkeby": "yarn hardhat test --network rinkeby",
    "coverage": "yarn hardhat coverage",
    "task-balance": "yarn hardhat balance --network rinkeby",
    "task-mint": "yarn hardhat mint --network rinkeby --amount",
    "task-deposit": "yarn hardhat deposit --network rinkeby --amount",
    "task-withdraw": "yarn hardhat withdraw --network rinkeby",
    "task-retrieve": "yarn hardhat retrieve --network rinkeby"
  }
